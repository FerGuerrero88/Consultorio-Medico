<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp">

            <!-- Imagen seleccionable -->
            <ImageView
                android:id="@+id/imageProfile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/perfil_default"
                android:layout_marginBottom="12dp"
                android:background="@drawable/circle_background"
                android:scaleType="centerCrop"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Seleccionar imagen de perfil" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Registro de Usuario"
                android:textSize="22sp"
                android:textColor="@color/text_black"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>
            |
            <Button
                android:id="@+id/buttonSelectImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Seleccionar Imagen"
                android:textColor="@color/white"
                android:backgroundTint="@color/purple_700"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp" />

            <HorizontalScrollView
                android:id="@+id/scrollImageSelector"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/option1"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil1"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/option2"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil2"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/option3"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil3"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/option4"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil4"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />

                    <ImageView
                        android:id="@+id/option5"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil5"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option6"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil6"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option7"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil7"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option8"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil8"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option9"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil9"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option10"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil10"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                    <ImageView
                        android:id="@+id/option11"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:src="@drawable/perfil11"
                        android:layout_margin="8dp"
                        android:background="@drawable/circle_background"
                        android:scaleType="centerCrop"
                        android:clickable="true" />
                </LinearLayout>
            </HorizontalScrollView>

            <EditText
                android:id="@+id/editTextAlias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nombre de Usuario"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/black"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />


            <EditText
                android:id="@+id/editTextUsername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correo Electronico"
                android:textColorHint="@color/hint_gray"
                android:textColor="@color/black"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contraseña"
                android:inputType="textPassword"
                android:textColorHint="@color/hint_gray"
                android:padding="12dp"
                android:textColor="@color/black"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/editTextConfirmPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirmar Contraseña"
                android:textColor="@color/black"
                android:textColorHint="@color/hint_gray"
                android:inputType="textPassword"
                android:padding="12dp"
                android:background="@drawable/edittext_background"
                android:layout_marginBottom="8dp" />

            <CheckBox
                android:id="@+id/checkBoxShowPassword"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mostrar contraseña"
                android:textColor="@color/text_black"
                android:layout_marginBottom="8dp" />


            <Button
                android:id="@+id/buttonAccept"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registrar"
                android:backgroundTint="@color/accent_blue"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
