<activity android:name=".RegisterActivity" android:exported="false" />
<activity android:name=".UserActivity" android:exported="false" />
<activity android:name=".DatosMedicosActivity" android:exported="false" />

<!-- Actividad principal con intent-filter -->
<activity
    android:name=".MainActivity"
    android:exported="true"
    android:label="SClinica Oasis"
    android:theme="@style/Theme.ClinicaOasis">
    <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
